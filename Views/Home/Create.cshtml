@model Crud_opreation.Models.Product

@{
    ViewBag.Title = "Create";
}



<div style="font-family:Arial">
    <h2>Create</h2>      
        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {    <form>
                    <h3>Product</h3>
                    <br />
                    <div class="form-group">
                        <label>ProductName</label>
                        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                    </div>

                    <br />
                    <h3>Category</h3>
                    <br />
                    <div class="form-group">
                        <label>CategoryId</label>
                        @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>CategoryName</label>
                        @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control" })
                    </div>
                    <br />

                    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                    @Html.ActionLink("Back to List", "Index")
             </form>
         }
 </div>   

